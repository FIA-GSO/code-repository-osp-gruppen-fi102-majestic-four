// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Benutzer {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  passwort String
  vorname  String?
  nachname String?
  firma    String?
  telefon  String?

  rolle   Rollen    @relation(fields: [rolleId], references: [id])
  rolleId Int
  vortrag Vortrag[]
  stand   Stand[]
}

model Stand {
  id              Int       @id @default(autoincrement())
  tag1            Boolean
  tag2            Boolean
  bemerkung       String?
  datum           String
  tisch           Int
  stuhl           Int
  email           String
  ansprechpartner String
  firma           String
  telefon         String?
  benutzer        Benutzer? @relation(fields: [benutzerId], references: [id], onDelete: Cascade)
  benutzerId      Int?
  status          Status    @relation(fields: [statusId], references: [id])
  statusId        Int
}

model Rollen {
  id          Int        @id @default(autoincrement())
  bezeichnung String
  benutzer    Benutzer[]
}

model Vortrag {
  id              Int       @id @default(autoincrement())
  dauer           Int
  thema           String
  email           String
  ansprechpartner String
  firma           String
  telefon         String?
  benutzer        Benutzer? @relation(fields: [benutzerId], references: [id], onDelete: Cascade)
  benutzerId      Int?
  datum           String
  uhrzeit         String
  status          Status    @relation(fields: [statusId], references: [id])
  statusId        Int
}

model Status {
  id          Int       @id @default(autoincrement())
  bezeichnung String
  vortrag     Vortrag[]
  stand       Stand[]
}
